@using Po.PoDropSquare.Blazor.Models
@using System.Net.Http.Json
@inject HttpClient Http
@implements IDisposable

<div class="leaderboard-container @(IsCompact ? "compact" : "")">
    <div class="leaderboard-header">
        <h3 class="leaderboard-title">
            @if (ShowIcon)
            {
                <span class="trophy-icon">üèÜ</span>
            }
            @Title
        </h3>
        
        @if (ShowRefreshButton)
        {
            <button class="refresh-btn" @onclick="RefreshLeaderboard" disabled="@IsLoading">
                <span class="refresh-icon @(IsLoading ? "spinning" : "")">üîÑ</span>
            </button>
        }
    </div>

    <div class="leaderboard-content">
        @if (IsLoading)
        {
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p>Loading leaderboard...</p>
            </div>
        }
        else if (HasError)
        {
            <div class="error-state">
                <span class="error-icon">‚ö†Ô∏è</span>
                <p>@ErrorMessage</p>
                <button class="retry-btn" @onclick="RefreshLeaderboard">Try Again</button>
            </div>
        }
        else if (Entries?.Any() == true)
        {
            <div class="leaderboard-list">
                @foreach (var entry in Entries.Take(MaxEntries))
                {
                    <div class="leaderboard-entry @(entry.IsCurrentPlayer ? "current-player" : "") @GetRankCssClass(entry.Rank)">
                        <div class="rank">
                            @if (entry.Rank <= 3)
                            {
                                <span class="medal">@GetMedalIcon(entry.Rank)</span>
                            }
                            else
                            {
                                <span class="rank-number">#@entry.Rank</span>
                            }
                        </div>
                        
                        <div class="player-info">
                            <div class="player-name">
                                @entry.PlayerInitials
                                @if (entry.IsCurrentPlayer)
                                {
                                    <span class="current-indicator">(YOU)</span>
                                }
                            </div>
                        </div>
                        
                        <div class="score">
                            <span class="score-value">@entry.SurvivalTime.ToString("0.00") s</span>
                        </div>
                    </div>
                }
            </div>
            
            @if (ShowPlayerRank && CurrentPlayerRank.HasValue && CurrentPlayerRank > MaxEntries)
            {
                <div class="player-rank-indicator">
                    <div class="separator">...</div>
                    <div class="current-player-rank">
                        Your rank: #@CurrentPlayerRank (@CurrentPlayerScore points)
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <span class="empty-icon">üéØ</span>
                <p>No scores yet!</p>
                <p class="empty-subtitle">Be the first to set a high score!</p>
            </div>
        }
    </div>

    @if (ShowLastUpdated && LastUpdated.HasValue)
    {
        <div class="last-updated">
            Last updated: @FormatLastUpdated(LastUpdated.Value)
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Top Players";
    [Parameter] public int MaxEntries { get; set; } = 10;
    [Parameter] public bool IsCompact { get; set; } = false;
    [Parameter] public bool ShowIcon { get; set; } = true;
    [Parameter] public bool ShowRefreshButton { get; set; } = true;
    [Parameter] public bool ShowLastUpdated { get; set; } = true;
    [Parameter] public bool ShowPlayerRank { get; set; } = true;
    [Parameter] public bool AutoRefresh { get; set; } = false;
    [Parameter] public int AutoRefreshInterval { get; set; } = 30000; // 30 seconds
    [Parameter] public string? CurrentPlayerName { get; set; }
    [Parameter] public EventCallback<LeaderboardEntry> OnEntryClicked { get; set; }
    [Parameter] public EventCallback<List<LeaderboardEntry>> OnLeaderboardLoaded { get; set; }

    private List<LeaderboardEntry>? Entries { get; set; }
    private bool IsLoading { get; set; } = false;
    private bool HasError { get; set; } = false;
    private string ErrorMessage { get; set; } = string.Empty;
    private DateTime? LastUpdated { get; set; }
    private Timer? _autoRefreshTimer;
    private bool _disposed = false;
    
    private int? CurrentPlayerRank => Entries?.FirstOrDefault(e => e.IsCurrentPlayer)?.Rank;
    private int CurrentPlayerScore => Entries?.FirstOrDefault(e => e.IsCurrentPlayer)?.Score ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await RefreshLeaderboard();
        
        if (AutoRefresh)
        {
            _autoRefreshTimer = new Timer(async _ => await RefreshLeaderboard(), null, 
                TimeSpan.FromMilliseconds(AutoRefreshInterval), 
                TimeSpan.FromMilliseconds(AutoRefreshInterval));
        }
    }

    public async Task RefreshLeaderboard()
    {
        if (_disposed || IsLoading) return;

        try
        {
            IsLoading = true;
            HasError = false;
            await InvokeAsync(StateHasChanged);

            var response = await Http.GetAsync("/api/scores/top10");
            
            if (response.IsSuccessStatusCode)
            {
                var apiResponse = await response.Content.ReadFromJsonAsync<LeaderboardApiResponse>();
                
                if (apiResponse?.Success == true && apiResponse.Leaderboard != null)
                {
                    Entries = apiResponse.Leaderboard;
                    
                    // Mark current player if specified
                    if (!string.IsNullOrEmpty(CurrentPlayerName))
                    {
                        foreach (var entry in Entries)
                        {
                            entry.IsCurrentPlayer = string.Equals(entry.PlayerName, CurrentPlayerName, 
                                StringComparison.OrdinalIgnoreCase);
                        }
                    }
                    
                    LastUpdated = DateTime.Now;
                    await OnLeaderboardLoaded.InvokeAsync(Entries);
                }
                else
                {
                    HasError = true;
                    ErrorMessage = "Failed to load leaderboard data";
                }
            }
            else
            {
                HasError = true;
                ErrorMessage = $"Server error: {response.StatusCode}";
            }
        }
        catch (HttpRequestException ex)
        {
            HasError = true;
            ErrorMessage = "Network error. Please check your connection.";
            Console.WriteLine($"Network error loading leaderboard: {ex.Message}");
        }
        catch (Exception ex)
        {
            HasError = true;
            ErrorMessage = "An unexpected error occurred.";
            Console.WriteLine($"Error loading leaderboard: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    public async Task HighlightPlayer(string playerName)
    {
        if (Entries != null)
        {
            foreach (var entry in Entries)
            {
                entry.IsCurrentPlayer = string.Equals(entry.PlayerName, playerName, StringComparison.OrdinalIgnoreCase);
            }
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task OnEntryClick(LeaderboardEntry entry)
    {
        await OnEntryClicked.InvokeAsync(entry);
    }

    private string GetMedalIcon(int rank) => rank switch
    {
        1 => "ü•á",
        2 => "ü•à", 
        3 => "ü•â",
        _ => ""
    };

    private string GetRankCssClass(int rank) => rank switch
    {
        1 => "first-place",
        2 => "second-place",
        3 => "third-place",
        _ => ""
    };

    private string FormatDuration(TimeSpan duration) => duration.TotalMinutes >= 1 
        ? $"{(int)duration.TotalMinutes}:{duration.Seconds:D2}"
        : $"{duration.Seconds}s";

    private string FormatDate(DateTime date) => date.Date == DateTime.Today 
        ? date.ToString("HH:mm")
        : date.ToString("MM/dd");

    private string FormatLastUpdated(DateTime lastUpdated)
    {
        var elapsed = DateTime.Now - lastUpdated;
        
        if (elapsed.TotalMinutes < 1)
            return "Just now";
        if (elapsed.TotalMinutes < 60)
            return $"{(int)elapsed.TotalMinutes}m ago";
        if (elapsed.TotalHours < 24)
            return $"{(int)elapsed.TotalHours}h ago";
        
        return lastUpdated.ToString("MM/dd HH:mm");
    }

    public void Dispose()
    {
        _disposed = true;
        _autoRefreshTimer?.Dispose();
    }
}

