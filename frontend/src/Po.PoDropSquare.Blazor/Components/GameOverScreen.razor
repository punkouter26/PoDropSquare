@using Po.PoDropSquare.Blazor.Models

<div class="game-over-screen @(IsVisible ? "visible" : "hidden")">
    <div class="game-over-content">
        <div class="game-over-header">
            @if (IsVictory)
            {
                <div class="victory-animation">
                    <h1 class="game-over-title victory">
                        <span class="celebration-icon">üéâ</span>
                        Victory!
                        <span class="celebration-icon">üéâ</span>
                    </h1>
                    <p class="game-over-subtitle">Congratulations! You reached the goal!</p>
                </div>
            }
            else if (IsTimeUp)
            {
                <div class="timeout-animation">
                    <h1 class="game-over-title timeout">
                        <span class="time-icon">‚è∞</span>
                        Time's Up!
                    </h1>
                    <p class="game-over-subtitle">Game over - you ran out of time!</p>
                </div>
            }
            else
            {
                <div class="game-over-animation">
                    <h1 class="game-over-title">
                        <span class="game-over-icon">üí´</span>
                        Game Over
                    </h1>
                    <p class="game-over-subtitle">Better luck next time!</p>
                </div>
            }
        </div>

        <div class="final-stats">
            <div class="stats-grid">
                <div class="stat-card primary">
                    <div class="stat-icon">üèÜ</div>
                    <div class="stat-content">
                        <div class="stat-label">Final Score</div>
                        <div class="stat-value">@FinalScore.ToString("N0")</div>
                    </div>
                </div>

                @if (GameDuration.HasValue)
                {
                    <div class="stat-card">
                        <div class="stat-icon">‚è±Ô∏è</div>
                        <div class="stat-content">
                            <div class="stat-label">Game Time</div>
                            <div class="stat-value">@FormatDuration(GameDuration.Value)</div>
                        </div>
                    </div>
                }

                @if (Rank.HasValue)
                {
                    <div class="stat-card @(Rank <= 3 ? "highlight" : "")">
                        <div class="stat-icon">@GetRankIcon(Rank.Value)</div>
                        <div class="stat-content">
                            <div class="stat-label">Your Rank</div>
                            <div class="stat-value">#@Rank</div>
                        </div>
                    </div>
                }

                @if (BlocksDropped > 0)
                {
                    <div class="stat-card">
                        <div class="stat-icon">üì¶</div>
                        <div class="stat-content">
                            <div class="stat-label">Blocks Dropped</div>
                            <div class="stat-value">@BlocksDropped</div>
                        </div>
                    </div>
                }

                @if (LinesCleared > 0)
                {
                    <div class="stat-card">
                        <div class="stat-icon">‚ú®</div>
                        <div class="stat-content">
                            <div class="stat-label">Lines Cleared</div>
                            <div class="stat-value">@LinesCleared</div>
                        </div>
                    </div>
                }

                @if (BestCombo > 1)
                {
                    <div class="stat-card">
                        <div class="stat-icon">üî•</div>
                        <div class="stat-content">
                            <div class="stat-label">Best Combo</div>
                            <div class="stat-value">@BestCombo</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (IsNewHighScore)
        {
            <div class="achievement-banner">
                <div class="achievement-content">
                    <span class="achievement-icon">üåü</span>
                    <span class="achievement-text">New High Score!</span>
                    <span class="achievement-icon">üåü</span>
                </div>
            </div>
        }

        @if (ShowPersonalBest && PersonalBest.HasValue && PersonalBest.Value < FinalScore)
        {
            <div class="personal-best-banner">
                <div class="personal-best-content">
                    <span class="pb-icon">üéØ</span>
                    <span class="pb-text">Personal Best! Previous: @PersonalBest.Value.ToString("N0")</span>
                </div>
            </div>
        }

        <div class="game-over-actions">
            <div class="primary-actions">
                <button class="action-btn primary large" @onclick="OnPlayAgainClicked">
                    <span class="btn-icon">üéÆ</span>
                    <span class="btn-text">Play Again</span>
                </button>

                @if (ShowSaveScore && !ScoreAlreadySaved)
                {
                    <button class="action-btn secondary large" @onclick="OnSaveScoreClicked">
                        <span class="btn-icon">üíæ</span>
                        <span class="btn-text">Save Score</span>
                    </button>
                }
            </div>
        </div>

        @if (ShowTips && GameTips?.Any() == true)
        {
            <div class="game-tips">
                <h4 class="tips-title">üí° Game Tips</h4>
                <div class="tips-content">
                    @foreach (var tip in GameTips.Take(2))
                    {
                        <div class="tip-item">
                            <span class="tip-bullet">‚Ä¢</span>
                            <span class="tip-text">@tip</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    @if (ShowBackground)
    {
        <div class="background-particles">
            @for (int i = 0; i < 20; i++)
            {
                <div class="particle" style="animation-delay: @(i * 0.1)s;"></div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public bool IsVictory { get; set; } = false;
    [Parameter] public bool IsTimeUp { get; set; } = false;
    [Parameter] public int FinalScore { get; set; }
    [Parameter] public TimeSpan? GameDuration { get; set; }
    [Parameter] public int? Rank { get; set; }
    [Parameter] public int BlocksDropped { get; set; }
    [Parameter] public int LinesCleared { get; set; }
    [Parameter] public int BestCombo { get; set; } = 0;
    [Parameter] public bool IsNewHighScore { get; set; } = false;
    [Parameter] public bool ShowPersonalBest { get; set; } = true;
    [Parameter] public int? PersonalBest { get; set; }
    [Parameter] public bool ShowSaveScore { get; set; } = true;
    [Parameter] public bool ScoreAlreadySaved { get; set; } = false;
    [Parameter] public bool ShowTips { get; set; } = true;
    [Parameter] public bool ShowBackground { get; set; } = true;
    [Parameter] public List<string>? GameTips { get; set; }
    [Parameter] public EventCallback OnPlayAgain { get; set; }
    [Parameter] public EventCallback OnSaveScore { get; set; }

    protected override void OnInitialized()
    {
        // Initialize default game tips if none provided
        GameTips ??= new List<string>
        {
            "Try to plan your moves ahead to create combos",
            "Use the arrow keys for precise positioning",
            "Clear multiple lines at once for bonus points",
            "Practice makes perfect - keep playing to improve!"
        };
    }

    private async Task OnPlayAgainClicked()
    {
        await OnPlayAgain.InvokeAsync();
    }

    private async Task OnSaveScoreClicked()
    {
        await OnSaveScore.InvokeAsync();
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}:{duration.Minutes:D2}:{duration.Seconds:D2}";
        else
            return $"{duration.Minutes:D2}:{duration.Seconds:D2}";
    }

    private string GetRankIcon(int rank) => rank switch
    {
        1 => "ü•á",
        2 => "ü•à",
        3 => "ü•â",
        <= 10 => "üèÜ",
        _ => "üìä"
    };
}

